<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#FF7878</Color>
    <SolidColorBrush x:Key="PrimarySolidColorBrush" Color="{StaticResource PrimaryColor}"/>

    <Style x:Key="LoginTextBox" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="2 5 2 5"/>
        <Setter Property="Margin" Value="0 0 0 20"/>
        <Setter Property="MinWidth" Value="350"/>
    </Style>
    <Style  x:Key="LoginPasswordBox" TargetType="PasswordBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="2 5 2 5"/>
        <Setter Property="Margin" Value="0 0 0 20"/>
        <Setter Property="MinWidth" Value="350"/>
    </Style>
    <Style x:Key="TextBoxLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
    </Style>

</ResourceDictionary>